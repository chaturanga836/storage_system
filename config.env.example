# Example configuration file for Tenant Node
# Copy this to config.env and modify as needed

# Tenant identification
TENANT_ID=tenant_001
TENANT_NAME=Company A - Subsidiary 1

# Data storage paths
DATA_PATH=./data

# gRPC server settings
GRPC_PORT=50051
GRPC_MAX_WORKERS=10

# REST API settings
REST_PORT=8000
REST_HOST=0.0.0.0

# Performance settings
MAX_CONCURRENT_SEARCHES=10
SEARCH_TIMEOUT_SECONDS=30

# Auto-scaling configuration
AUTO_SCALING_ENABLED=true
MIN_WORKERS=2
MAX_WORKERS=50
SCALE_UP_THRESHOLD_CPU=70.0
SCALE_DOWN_THRESHOLD_CPU=30.0
SCALE_UP_THRESHOLD_MEMORY=80.0
SCALE_DOWN_THRESHOLD_MEMORY=40.0

# Compaction configuration
AUTO_COMPACTION_ENABLED=true
COMPACTION_INTERVAL_MINUTES=60
MIN_FILE_SIZE_MB=50.0
MAX_FILE_SIZE_MB=512.0
TARGET_FILE_SIZE_MB=256.0

# Query optimization
QUERY_OPTIMIZATION_ENABLED=true
STATISTICS_REFRESH_INTERVAL_MINUTES=30
COST_MODEL_LEARNING_ENABLED=true

# Storage settings
WAL_RETENTION_HOURS=24
INDEX_REFRESH_INTERVAL_MINUTES=5
COMPACTION_THRESHOLD_FILES=10

